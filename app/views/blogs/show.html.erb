<div class="col-md-8 blog-main">
 
  <h2><%= @blog.title  %></h2>
  <p>
    <%= @blog.topic.title %>
  </p>
  <%= link_to @blog.status, toggle_status_blog_path(@blog) if logged_in?(:site_admin) %> |
  <%= link_to 'Edit', edit_blog_path(@blog)  if logged_in?(:site_admin) %> |
  <%= link_to 'Back', blogs_path %>

  <p>
    <%= markdown(@blog.body) %>
  </p>

 <%= render 'comments/comment_form' %>

 <div id="comments" data-blog-id="<%= @blog.id %>">
   <%= render @blog.comments %> <!-- By default this will go to views/comments and look for a partial named _comment.html.erb and render with that template -->
 </div>
</div>



